#include <iostream.h>
#include <iomanip.h>

main()
{
	int side;
	int a,b,c,d;
	int x = 1;

	do{

	cout<<"Enter the length of the side. -> ";
	cin>>side;
	cout<<endl;

	c = side-2;   //to get the sides
	d = c + 1;    //setw

	for(a = side; a > 0; a--)
	{
		cout<<"*";
	}

	cout<<endl;

	for(b = c; b > 0; b--)
	{
		cout<<"*"<<setw(d)<<"*"<<endl;
	}

	for(a = side; a > 0; a--)
	{
		cout<<"*";
	}

	cout<<"\n\nTo continue, enter 1. To exit, enter 2. -> ";
	cin>>x;
	cout<<endl;

	}while(x==1);

	return 0;
}
