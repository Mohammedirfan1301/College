<?xml version="1.0" encoding="UTF-8"?>
<project name="module_permissionslab" default="compile.module.permissionslab">
  <dirname property="module.permissionslab.basedir" file="${ant.file.module_permissionslab}"/>
  
  <property name="module.jdk.home.permissionslab" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.permissionslab" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.permissionslab" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.permissionslab" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="permissionslab.output.dir" value="${module.permissionslab.basedir}/../out/production/PermissionsLab"/>
  <property name="permissionslab.testoutput.dir" value="${module.permissionslab.basedir}/../out/test/PermissionsLab"/>
  
  <path id="permissionslab.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="permissionslab.module.production.classpath">
    <path refid="${module.jdk.classpath.permissionslab}"/>
  </path>
  
  <path id="permissionslab.runtime.production.module.classpath">
    <pathelement location="${permissionslab.output.dir}"/>
  </path>
  
  <path id="permissionslab.module.classpath">
    <path refid="${module.jdk.classpath.permissionslab}"/>
    <pathelement location="${permissionslab.output.dir}"/>
  </path>
  
  <path id="permissionslab.runtime.module.classpath">
    <pathelement location="${permissionslab.testoutput.dir}"/>
    <pathelement location="${permissionslab.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.permissionslab">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.permissionslab">
    <patternset refid="excluded.from.module.permissionslab"/>
  </patternset>
  
  <path id="permissionslab.module.sourcepath">
    <dirset dir="${module.permissionslab.basedir}/../../PermissionsLab">
      <include name=".idea/gen"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.permissionslab" depends="compile.module.permissionslab.production,compile.module.permissionslab.tests" description="Compile module PermissionsLab"/>
  
  <target name="compile.module.permissionslab.production" depends="register.custom.compilers" description="Compile module PermissionsLab; production classes">
    <mkdir dir="${permissionslab.output.dir}"/>
    <javac2 destdir="${permissionslab.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.permissionslab}/javac">
      <compilerarg line="${compiler.args.permissionslab}"/>
      <bootclasspath refid="permissionslab.module.bootclasspath"/>
      <classpath refid="permissionslab.module.production.classpath"/>
      <src refid="permissionslab.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.permissionslab"/>
    </javac2>
    
    <copy todir="${permissionslab.output.dir}">
      <fileset dir="${module.permissionslab.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.permissionslab.basedir}/../src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.permissionslab.tests" depends="register.custom.compilers,compile.module.permissionslab.production" description="compile module PermissionsLab; test classes" unless="skip.tests"/>
  
  <target name="clean.module.permissionslab" description="cleanup module">
    <delete dir="${permissionslab.output.dir}"/>
    <delete dir="${permissionslab.testoutput.dir}"/>
  </target>
</project>